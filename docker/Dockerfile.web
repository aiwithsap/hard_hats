# Dockerfile for Hard Hats Detection - Web Service
# Serves FastAPI API, authentication, SSE, and MJPEG proxy

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies (including OpenCV deps, bcrypt build deps, and git)
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    libgl1 \
    libglib2.0-0 \
    libffi-dev \
    gcc \
    git \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies inline (avoiding file upload corruption)
RUN pip install --no-cache-dir \
    'fastapi>=0.109.0' \
    'uvicorn[standard]>=0.27.0' \
    'python-multipart>=0.0.6' \
    'sqlalchemy[asyncio]>=2.0.25' \
    'asyncpg>=0.29.0' \
    'alembic>=1.13.1' \
    'redis>=5.0.1' \
    'python-jose[cryptography]>=3.3.0' \
    'bcrypt>=4.0.0' \
    'pydantic>=2.5.3' \
    'pydantic-settings>=2.1.0' \
    'email-validator>=2.1.0' \
    'sse-starlette>=1.8.2' \
    'opencv-python-headless>=4.9.0' \
    'numpy>=1.26.0' \
    'httpx>=0.26.0'

# Clone the repo from GitHub to avoid file upload corruption
# CACHEBUST forces fresh clone when code changes
ARG CACHEBUST=20260119_inference_toggle
ARG GITHUB_REPO=https://github.com/aiwithsap/hard_hats.git
RUN echo "Cache bust: ${CACHEBUST}" && \
    mkdir -p app && \
    git clone --depth 1 ${GITHUB_REPO} /tmp/repo && \
    cp -r /tmp/repo/app/shared app/shared && \
    cp -r /tmp/repo/app/web app/web && \
    cp -r /tmp/repo/alembic alembic && \
    cp /tmp/repo/alembic.ini . && \
    rm -rf /tmp/repo

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:${PORT:-8123}/health || exit 1

# Expose port (Railway provides PORT env var)
EXPOSE ${PORT:-8123}

# Run migrations then start web server
# Use stamp if upgrade fails (handles revision mismatch from previous migrations)
CMD ["sh", "-c", "alembic upgrade head || alembic stamp head; uvicorn app.web.main:app --host 0.0.0.0 --port ${PORT:-8123}"]
